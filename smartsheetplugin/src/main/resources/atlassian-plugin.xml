<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <xhtml-macro name="confluence-smartsheet-macro" class="com.caseykelso.confluence.SmartsheetMacro" key="smartsheet">
        <parameters>
          <parameter name="Smartsheets API Token"                      type="string"  required="true" alias="api-token"/>
          <parameter name="Smartsheets Sheet ID"                       type="string"  required="true" alias="sheet-id" />
          <parameter name="Tag Name To Filter By, or (Blank)"          type="string"  required="false" alias="tag-filter" /> 
<!--
          <parameter name="Red-Yellow-Green Status Indicator Column"   type="boolean"  alias="ryg-column" />
          <parameter name="Tasks Column"                               type="boolean"  alias="task-column" /> 
          <parameter name="Status Column"                              type="boolean"  default="true" alias="status-column"  />
          <parameter name="Assigned To Column"                         type="boolean"  default="true" alias="assigned-column" />
          <parameter name="Tags Column"                                type="boolean"  default="false" alias="tags-column" />
          <parameter name="Comments Column"                            type="boolean"  default="false" alias="comments-column" />
          <parameter name="Start Column"                            type="boolean"  default="false" alias="start-column" />
          <parameter name="Finish Column"                            type="boolean"  default="false" alias="finish-column" />
--> 
 
        </parameters>
    </xhtml-macro>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="smartsheetplugin"/>
    
    <!-- add our web resources -->
    <web-resource key="smartsheetplugin-resources" name="smartsheetplugin Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="smartsheetplugin.css" location="/css/smartsheetplugin.css"/>
        <resource type="download" name="smartsheetplugin.js" location="/js/smartsheetplugin.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>smartsheetplugin</context>
    </web-resource>
   

     
</atlassian-plugin>
